with-contenv -we
if -t {
    importas -D "" UNSPLITTED REMOVE_PATHS
    s6-test -n $UNSPLITTED
}
importas -usd ":" REMOVE_PATHS REMOVE_PATHS
if {
    s6-notice "Removing files and directories"
    forx -p GLOB { $REMOVE_PATHS }
        importas -u GLOB GLOB
        elglob -0 TARGETS $GLOB
        forx -p TARGET { $TARGETS }
            importas -u TARGET TARGET
            if -t {
                s6-test -e $TARGET
            }
            s6-logcmd
            s6-rmrf $TARGET
}
importas -i S6_LAUNCH_ENV S6_LAUNCH_ENV
s6-rmrf ${S6_LAUNCH_ENV}/env/REMOVE_PATHS
