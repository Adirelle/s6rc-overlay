#!/bin/execlineb -S1
if {
    s6-mkdir -p -m 0755 ${1}
}
if {
    getcwd __WORKDIR
    importas -u WORKDIR __WORKDIR
    redirfd -w 1 ${1}/WORKDIR
    s6-echo $WORKDIR
}
importas -u USER S6_USER
if {
    redirfd -w 1 ${1}/UID
    id -u $USER
}
if {
    redirfd -w 1 ${1}/GID
    id -g $USER
}
if {
    redirfd -w 1 ${1}/GIDLIST
    pipeline { id -G $USER }
    tr " " ,
}
wait -r { }
