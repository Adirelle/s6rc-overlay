#!/bin/execlineb -P
import -i S6_COMPILED_DIR
if {
    s6-test ! -d $S6_COMPILED_DIR
}
if {
    /libexec/s6-rc/make-service-bundle
}
s6-notice "Compiling the service database"
multisubstitute {
    import -i S6_SERVICES_DIR
    import -i S6_VERBOSITY
}
s6-rc-compile -v $S6_VERBOSITY $S6_COMPILED_DIR $S6_SERVICES_DIR
