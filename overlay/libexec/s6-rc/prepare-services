#!/bin/execlineb -P
multisubstitute {
    import -i S6_COMPILED_DIR
    import -i S6_RUN_DIR
    import -i S6_VERBOSITY
}
if { /libexec/s6-rc/make-services-bundle /etc/services.d ${S6_RUN_DIR}/source }
wait -r { }
s6-notice "Compiling the service database"
if { s6-rc-compile -v $S6_VERBOSITY $S6_COMPILED_DIR ${S6_RUN_DIR}/source /etc/services.d }
